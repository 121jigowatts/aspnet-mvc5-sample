@model aspnet_mvc5_mongodb.ViewModels.UserSearchViewModel

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
@using (Html.BeginForm("Search", "Users", FormMethod.Post))
{
    <p>
        <div class="form-group">
            <label class="control-label col-md-1">Name:</label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.userSearchCondition.userName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-1">Age:</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.userSearchCondition.fromUserAge, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <label class="control-label col-md-1">~</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.userSearchCondition.toUserAge, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-1">Email:</label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.userSearchCondition.userEmail, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-1">Address:</label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.userSearchCondition.userAddress, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </p>
}


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Age
        </th>
        <th>
            Email
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
